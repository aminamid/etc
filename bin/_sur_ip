#!/bin/bash
interval=${1:-10}
dirname=${2:-pacdat/$(date +test%Y%m%d%H%M%S)}

if [ ! -d "${dirname}" ]
then
    mkdir -p ${dirname}
fi

echo "dirname:" ${dirname}
echo "interval:" ${interval}
echo "results is storing to ${dirname}"

sudo -u root bash -l -s < _smpl_tcpdump >> ${dirname}/$(hostname).ip
