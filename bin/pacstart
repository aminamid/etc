#!/bin/bash

testname=${1:-$(date +test%Y%m%d%H%M%S)}
interval=${2:-60}
targetdir=${3:-/imail}
password=${4}

pactmp=$(dirname ${TOOL_ROOT})

echo "testname:" ${testname}
echo "interval:" ${interval}

nohup paracmd -t ${pactmp} -n 3 -d pacmon -w "${password}" -l \
"psar -i ${interval} -t ${testname}" \
"psps -i ${interval} -t ${testname}" \
"pdsz ${targetdir} ${testname} ${interval}" \
"" &
